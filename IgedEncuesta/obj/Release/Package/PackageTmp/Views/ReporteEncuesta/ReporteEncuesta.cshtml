            $(spanCodigo).html($("#codigoHog").val());

        });


        $("#encuestaAbierta").dialog({
            autoOpen: false,
            resizable: false,
            width: 550,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: false,
            dialogClass: 'dialog',
            hide: 'explode',
            buttons: {
                "Cancelar": function () {
                    $(this).dialog("close");
                }

            }

        });

        $("#encuestaCerrada").dialog({
            autoOpen: false,
            resizable: false,
            
            width: 550,
            show: { effect: 'drop', direction: "up" },
            modal: true,
            draggable: false,
            dialogClass: 'dialog',
            hide: 'explode',
            buttons: {
                "Cancelar": function () {
                    $(this).dialog("close");
                },
                "Generar": function () {
                    $(this).dialog().find('form').submit();
                    $(this).dialog("close");
                }

            }

        });

    });

